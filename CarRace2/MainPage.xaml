<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarRace2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0">
            <Button Text="Start"
                    Clicked="Button_Clicked"></Button>
            <Image x:Name="ImageCar1"
                   Source="dotnet_bot.png"
                   WidthRequest="100"
                   HorizontalOptions="Start"/>
            <Label x:Name="car1Info"
                    Text="car1 info"></Label>
            <Label x:Name="timeUsecar1Info"></Label>
            <Image x:Name="ImageCar2"
                   Source="dotnet_bot.png"
                   WidthRequest="100"
                   HorizontalOptions="Start"/>

            <Label x:Name="car2Info"
                    Text="car2 info"></Label>
            <Label x:Name="timeUsecar2Info"></Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>